<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!-- API 11 theme customizations can go here. -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

        <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowAnimationStyle">@style/AnimateTheme</item>  
    </style>

    <style name="AnimateTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenExitAnimation">@anim/translate_exit</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_exit</item>
    </style>
</resources>
