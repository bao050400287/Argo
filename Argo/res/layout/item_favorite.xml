<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/fav_item_state_list"
    android:orientation="vertical"
    android:paddingBottom="@dimen/fav_item_padding"
    android:paddingLeft="10dp"
    android:paddingTop="@dimen/fav_item_padding" >

    <TextView
        android:id="@+id/name_cn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="placeholder"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/fav_item_large"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/name_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="placeholder"
        android:textColor="#D6B930"
        android:textSize="@dimen/fav_item_small" />

</LinearLayout>