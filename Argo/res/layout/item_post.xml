<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/user_and_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/add_comment"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/post_userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="something big happened!"
                android:textColor="#D6B930"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/post_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="A plane crashed !"
                android:background="@drawable/pressed_background"
                android:autoLink="web"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageButton
            android:id="@id/add_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:background="@drawable/add_comment_state_list"
            android:src="@drawable/ic_action_chat" />
    </RelativeLayout>

    <TextView
        android:id="@+id/post_quote"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F4F4F4"
        android:padding="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="\@LLLLL: From netease http://news.163.com"
        android:textSize="14sp" />

</LinearLayout>